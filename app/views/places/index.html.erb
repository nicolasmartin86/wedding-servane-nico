<div id="map-places" style="width: 100%;
height: 600px;" data-api-key='<%= ENV["MAPBOX_API_KEY"] %>'></div>

<div class="card-places">
    <% @places.each do |place| %>
        <div class="card-place">
            <img src="<%= asset_url(place.photo) %>"  />
            <div class="card-place-infos" data-markers="<%= {lng: place.longitude, lat: place.latitude}.to_json %>" data-type-of="<%= place.place_type %>">
                <h2><%= place.title %></h2>
                <p><%= place.information %></p>
            </div>
        </div>
    <% end %>
</div>