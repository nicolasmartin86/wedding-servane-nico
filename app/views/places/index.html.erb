
<div class="container">
    <div id="map-places" style="width: 100%;
    height: 50vh;" data-api-key='<%= ENV["MAPBOX_API_KEY"] %>'></div>
    <div class="card-places">
        <div class="arrows left-btn-arrow"><i class="fas fa-sort-up left-arrow"></i></div>
        <% @places.each do |place| %>
            <div class="card-place fade-in inactive">
                <div class="place-image" style="background-image: url('../../../assets/<%= place.photo %>');"></div>
                <div class="card-place-infos" data-markers="<%= {lng: place.longitude, lat: place.latitude}.to_json %>" data-type-of="<%= place.place_type %>" data-logo="<%= place.logo %>" data-price="<%= place.price %>">
                    <h2><%= place.title %></h2>
                    <p><%= place.information %></p>
                </div>
            </div>
        <% end %>
        <div class="arrows right-btn-arrow"><i class="fas fa-sort-up right-arrow"></i></div>
    </div>
</div>